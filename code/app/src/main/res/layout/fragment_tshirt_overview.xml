<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/button_detail_binding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Detail Fragment with Binding"
        android:textAlignment="center" />

    <fragment
        android:id="@+id/detailed_view_binding"
        android:name="com.example.livedatapresentation.tshirt.screens.detail.DetailFragmentWithDataBinding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_fragments"
        android:layout_weight="0.33" />

    <TextView
        android:id="@+id/button_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Detail Fragment"
        android:textAlignment="center" />

    <fragment
        android:id="@+id/detailed_view"
        android:name="com.example.livedatapresentation.tshirt.screens.detail.DetailFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_fragments"
        android:layout_weight="0.33" />

    <TextView
        android:id="@+id/button_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Overview Fragment"
        android:textAlignment="center" />

    <fragment
        android:id="@+id/overview_view"
        android:name="com.example.livedatapresentation.tshirt.screens.selection.TShirtListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_fragments"
        android:layout_weight="0.33" />

    <Button
        android:id="@+id/button_add_random"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Add Random T-Shirt"
        android:textAlignment="center" />
</LinearLayout>
